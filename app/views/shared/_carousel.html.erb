<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="tcarouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselIndicators" data-slide-to="1"></li>
    <li data-target="#carouselIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner ">
    <% @deals.first(6).each_with_index do |deal, index| %>
    <% if index == 1 %>
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= deal.image_url %>" alt="First promo">
        </div>
    <% else %>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= deal.image_url %>" alt="other promo">
      </div>
    <% end %>
  <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
