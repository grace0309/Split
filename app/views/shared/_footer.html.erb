<!-- Footer -->
<footer class="page-footer fixed-bottom">

  <!-- Footer Elements -->
  <div id ="horizontal-list">

    <!-- Social buttons -->
    <ul class="d-flex flex-row justify-content-between px-4 mb-1">
      <li class="list-inline-item">
        <a class="btn-floating btn-fb mx-1">
        <%= link_to root_path do %>
          <%= image_tag 'home.svg', class: "svg-icons" %>
        <% end %>
        </a>
      </li>

      <li class="list-inline-item">
        <a class="btn-floating btn-tw mx-1">
          <% if current_user.has_notification? %>
            <i class="fas fa-circle notify-icon"></i>
          <% end %>
          <%= link_to chats_path do%>
          <%= image_tag 'chat.svg', class: "svg-icons" %>
          <% end %>
        </a>
      </li>
      <li class="list-inline-item">
        <a class="btn-floating btn-gplus mx-1">
          <%= link_to new_post_path do%>
          <%= image_tag 'write.svg', class: "svg-icons" %>
          <% end %>
        </a>
      </li>
      <li class="list-inline-item">
        <a class="btn-floating btn-dribbble mx-1">
          <%= link_to dashboard_path do %>
          <%= image_tag 'user.svg', class: "svg-icons" %>
          <% end %>
        </a>
      </li>
    </ul>
    <!-- Social buttons -->

  </div>
  <!-- Footer Elements -->
</footer>
<!-- Footer -->
