function refreshForm(innerHTML) {
  const newMessageForm = document.getElementById('new_message');
  newMessageForm.innerHTML = innerHTML;
}


<% if @message.errors.any? %>
  refreshForm('<%= j render "messages/form", post: @post, message: @message %>');
<% else %>
  refreshForm('<%= j render "messages/form", post: @post, message: Message.new %>');
<% end %>
