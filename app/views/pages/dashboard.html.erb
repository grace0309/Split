<%= render partial: 'shared/header', locals: {:title => "#{@user.first_name}'s Dashboard", :myclass => "sub-title"} %>

<div class="wrapper">
  <nav class="tabs justify-content-center">
    <div class="selector"></div>
    <a href="#" class="active">Ongoing</a>
    <a href="#">History</a>
    <a href="#"></i>User Review</a>
  </nav>
</div>


<!-- Deals active and deals joined -->
<div class="ongoing">
<h2 class="mx-1">You have posted ...</h2>
<% @posts.each do |post| %>
<% if post.status == true && post.completed == false %>
  <div class="notification">
    <div class="notification-content">
      <%= link_to post_path(post) do %>
        <p class="timer"><small>
          <span class="end_time_data" data-time="<%=post.end_time%>"></span>
          <span class="hours"></span>:
          <span class="minutes"></span>:
          <span class="seconds"></span>
        </small></p>
        <p><%= post.store_name %></p>
        <p><%= post.discount %></p>
        <% end %>
    </div>
    <div class="notification-actions">
      <%= link_to edit_post_path(post) do %>
        Edit <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= link_to  post_path(post), method: :delete do %>
        Delete <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <% end %>
  <% end %>
<br>
  <h2 class="mx-1">You have joined ... </h2>
  <% @transactions.each do |transaction| %>
  <% if transaction.post.status == true && transaction.post.completed == false %>
    <div class="notification">
      <div class="notification-content">
        <p class="timer"><small>
          <span class="end_time_data" data-time="<%=transaction.post.end_time%>"></span>
          <span class="hours"></span>:
          <span class="minutes"></span>:
          <span class="seconds"></span>
        </small></p>
        <%= link_to post_path(transaction.post) do %>
          <p><%= transaction.post.store_name %></p>
          <p><%= transaction.post.discount %></p>
        <% end %>
      </div>
      <div class="notification-actions">
      <%= link_to edit_transaction_path(transaction.post) do %>
        Edit <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= link_to transaction_path(transaction.post), method: :delete do %>
          Delete <i class="far fa-trash-alt"></i>
      <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<!--history: deals expired and deals joined before -->
<div class="history hidden">
<h2 class="mx-1">Ended Deals</h2>
<% @posts.each do |post| %>
<% if post.status == true && post.completed == true %>
  <div class="notification">
    <div class="notification-content">
      <%= link_to post_path(post) do %>
        <p><small>Completed</small></p>
        <p><%=  post.store_name%></p>
        <p><%= post.discount%> </p>
      <% end %>
    </div>
  </div>
<% else post.status == true && post.completed == false %>
  <div class="notification">
    <div class="notification-content">
      <%= link_to post_path(post) do %>
        <p><small>Expired</small></p>
        <p><%=  post.store_name%></p>
        <p><%= post.discount%></p>
    <% end %>
    </div>
  </div>
<% end %>
<% end %>
<% @transactions.each do |transaction| %>
<% if transaction.post.status == false && transaction.post.completed == true %>
  <div class="notification">
    <div class="notification-content">
      <%= link_to post_path(transaction.post) do %>
        <p><small>Completed</small></p>
        <p><%= transaction.post.store_name %></p>
        <p><%= transaction.post.discount %></p>
      <% end %>
    </div>
  </div>
<% else transaction.post.status == false && transaction.post.completed == false %>
  <div class="notification">
    <div class="notification-content">
      <%= link_to post_path(transaction.post) do %>
        <p><small>Expired</small></p>
        <p><%= transaction.post.store_name %></p>
        <p><%= transaction.post.discount %></p>
     <% end %>
    </div>
  </div>
<% end %>
<% end %>
</div>


