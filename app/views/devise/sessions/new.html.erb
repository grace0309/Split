<div class="container d-flex flex-column justify-content-center">
  <h2 class = "text-center">
  Share, Split and Save</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="md-form">

      <%= f.input :email,
                  label: false,
                  placeholder: "Type your email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "inputform" } %>
    </div>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "inputform" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


<div  id="login-page">
  <div class="container justify-content-center w-75" id="centered-login">
    <div class="text-center">
    <%= image_tag 'logo.png', style:"max-height: 300px; max-width: 250px;" %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="d-flex">
        <i class="far fa-envelope-open mr-2"></i>
        <%= f.input :email, label: false,  placeholder:"email", input_html: { class: 'new-input' } %>
        </div>
        <div class="d-flex">
        <i class="fas fa-unlock-alt mr-2"></i>
        <%= f.input :password, label: false, placeholder:"password", input_html: { class: 'new-input' } %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn btn-outline-secondary w-100 ">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
  <div class="d-flex justify-content-between">
  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
