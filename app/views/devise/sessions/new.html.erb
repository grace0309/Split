<div  id="login-page">
  <div class="container justify-content-center w-75" id="centered-login">
    <div class="text-center">
    <%= image_tag 'logo.png', style:"max-height: 300px; max-width: 250px;" %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: '<i class="far fa-envelope-open"></i>'.html_safe, placeholder:"email", input_html: { class: 'new-input' } %>
        <%= f.input :password, label: '<i class="fas fa-unlock-alt"></i>'.html_safe, placeholder:"password", input_html: { class: 'new-input' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn btn-outline-secondary btn-block">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
  <div class="d-flex justify-content-between">
  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
