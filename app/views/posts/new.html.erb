
<%= render partial: 'shared/header', locals: {:title => "Share & find splitees", :myclass => "sub-title"} %>
<div class="container">
  <div class="row justify-content-center">
    <div class = "col-lg-6">
      <div class="form-post">
        <%=simple_form_for (@post) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
            <%= f.input :photo, label: '<i class="fas fa-camera"></i> Choose a photo'.html_safe %>
            <%= f.input :photo_cache, as: :hidden %>

            <%= f.input :discount, label: '<i class="fas fa-volume-up"></i> Share your discount'.html_safe, input_html: { class: 'new-input' } %>

            <%= f.input :store_name, label: '<i class="fas fa-store"></i> Store'.html_safe, placeholder: "Sephora", input_html: { class: 'new-input' }%>
            <%= f.association :category, collection: Category.all, value_method: :id, as: :radio_buttons, label: '<i class="fas fa-boxes"></i> Category'.html_safe %>
            <div class="d-flex">
              <%= f.input :quota, label: '<i class="fas fa-money-bill-wave"></i> Amount to raise'.html_safe, placeholder: 150, hint: "Type in the total amount you need",  wrapper_html: { class: "flex-grow-1" }, input_html: { class: 'new-input' } %>
              <%= f.input :units, :collection => %w[Dollars \ Pieces \ People], label: "Units", wrapper_html: { class: "ml-3" }, input_html: { class: 'new-input' } %>
            </div>
            <%= f.input :starting_contribution, label: '<i class="fas fa-shopping-basket"></i> How much are you starting with?'.html_safe, hint: "Type in the amount you are contributing", input_html: { class: 'new-input' } %>
            <%= f.hidden_field :start_time, value: Time.now %>
            <%= f.input :end_time,as: :string, label: '<i class="far fa-clock"></i> What time can you wait until?'.html_safe,wrapper_html: { class: "inline_field_wrapper" }, input_html: { class: 'new-input' } %>
            <%= f.input :details, as: :text, label: '<i class="fas fa-pencil-alt"></i> Details'.html_safe, placeholder: "Perhaps we can exchange some beauty tips too!", input_html: { class: 'new-input' } %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, 'Share now', class: "btn btn-primary"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

